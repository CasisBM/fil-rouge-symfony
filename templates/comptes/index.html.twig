{% extends 'base.html.twig' %}

{% block title %}Comptes index{% endblock %}

{% block body %}
    <h1>Comptes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation_compte</th>
                <th>Email</th>
                <th>Envoi_email</th>
                <th>Token</th>
                <th>Email_verification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td>{{ compte.id }}</td>
                <td>{{ compte.creationCompte ? compte.creationCompte|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ compte.email }}</td>
                <td>{{ compte.envoiEmail ? compte.envoiEmail|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ compte.token }}</td>
                <td>{{ compte.emailVerification ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_comptes_show', {'id': compte.id}) }}">show</a>
                    <a href="{{ path('app_comptes_edit', {'id': compte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comptes_new') }}">Create new</a>
{% endblock %}
